{% extends 'base.html.twig' %}

{% block title %}Hello EvenementController!{% endblock %}

{% block body %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>

<div class="example-wrapper">
    <h1>Detail de l'évènement {{ evenement_choisi.titre }}</h1>
    {% for session in listeSessions %}
        // on prend une session et on affiche le titre
        <li><h1>titre : {{ session.titre  }}</h1>
            // on prend la session, on prend l'évènement qui y correspond et on affiche un attribut de cet event
            <h1>Nombre max de participant : {{ session.getEvenement().nbpartmax  }}</h1>
            <h1>adresse : {{ session.getEvenement().adresse  }}</h1>
            <h2>liste des membres : </h2>
            // récupération de la collection dans une boucle
            {% for membre in  session.getEvenement.getMembres() %}
                // affichage de chaque membres
            <h3>{{ membre.nom}} </h3>
            {% endfor %}
        </li>
    {% endfor %}

    <a href="/..">Retour</a>
    <a href="/detailsession">detail session</a>
</div>
{% endblock %}